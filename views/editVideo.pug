extends layouts/main.pug
block content
    .form-container
        form(action=routes.videos+"/"+id+"/edit" method='post')
            input(type="text" name="title" placeholder='Title' value=video.title)
            textarea(name="description" placeholder="description" cols="15" rows="2")=video.description
            input(type="submit" value='Update Video')
        a.form-container_link(href=routes.videos+"/"+id+"/delete") Delete Video
